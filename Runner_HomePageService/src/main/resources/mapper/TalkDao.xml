<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.runner.homepage.dao.TalkDao">
    <insert id="save" useGeneratedKeys="true" keyProperty="dto.tid">
        INSERT INTO t_talk(talk_user_id,talk_ctime,talk_type,talk_content,talk_topic_id)
        VALUES(#{uid},now(),#{dto.talkType},#{dto.talkContent},#{dto.talkTopicId})
    </insert>
</mapper>